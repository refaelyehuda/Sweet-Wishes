<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
    tools:context="com.menachi.class3demo.LoginActivity">
    <ImageView android:layout_width="wrap_content" android:id="@+id/imageWellcome"
        android:src="@drawable/cake" android:layout_height="wrap_content"
        android:scaleType="centerCrop"></ImageView>
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="158dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textStyle="bold"
                android:textColor="#CC0066"
                android:textAlignment="textStart"
                android:textSize="23dp"/>
            <EditText
                android:textSize="23dp"
                android:layout_width="fill_parent"
                android:textStyle="bold"
                android:textColor="#CC0066"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:id="@+id/user" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:textColor="#CC0066"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textSize="23dp" />

            <EditText
                android:textSize="23dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textColor="#CC0066"
                android:inputType="textPassword"
                android:password="true"
                android:singleLine="true"
                android:id="@+id/password" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:text="Login"
                android:textStyle="bold"
                android:textColor="#CC0066"
                android:textSize="25sp"
                android:id="@+id/loginBtn"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:background="@drawable/buttonshape"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_alignParentBottom="false"
                android:layout_marginTop="180dp"

                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>